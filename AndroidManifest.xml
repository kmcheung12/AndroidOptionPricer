<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comp7405.optionpricer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.comp7405.optionpricer.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EuorpeanOptionActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.comp7405.optionpricer.EuorpeanOption" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity
            android:name=".GeometricAsianActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.comp7405.optionpricer.GeoAsianOption" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity
            android:name=".ArithmaticAsianActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.comp7405.optionpricer.ArithmaticAsian" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity
            android:name=".GeometricBasketActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.comp7405.optionpricer.GeometricBasket" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
		<activity
            android:name=".ArithmaticBasketActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.comp7405.optionpricer.ArithmaticBasket" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
		</activity>
    </application>

</manifest>
